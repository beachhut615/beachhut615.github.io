{
  "manifest_version": 2,
  "name": "Popup Box Add-on",
  "version": "1.0",
  "description": "A Firefox add-on that displays a popup box.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "permissions": [
    "activeTab"
  ]
}